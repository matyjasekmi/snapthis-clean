<!DOCTYPE html>
<html><head><meta charset="utf-8" /><meta name="viewport" content="width=device-width,initial-scale=1" /><title>Admin</title></head>
<body>
  <main>
    <p><a href="/admin/logout">Logout</a></p>
    <h1>Admin dashboard</h1>
    <h2>Products</h2>
    <ul>
      <% products.forEach(function(p){ %>
        <li><strong><%= p.title %></strong> - <%= p.price %></li>
      <% }) %>
    </ul>
    <h2>Guest pages</h2>
    <ul>
      <% guestPages.forEach(function(g){ %>
        <li><a href="/admin/guestpages/<%= g.id %>"><%= g.title %></a> (uploads: <%= g.uploadCount || 0 %>)</li>
      <% }) %>
    </ul>
  </main>
</body>
</html>