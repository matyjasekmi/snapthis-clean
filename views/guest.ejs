<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= page.title %></title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <%- include('partials/header') %>
  <main class="container">
    <h1><%= page.title %></h1>
    <% if (typeof paid !== 'undefined' && paid) { %>
      <div class="badge-status completed">Payment received — dzięki!</div>
    <% } %>
    <div class="card card--section">
      <div class="card-body">
        <form method="POST" action="/guest/<%= page.id %>/upload" enctype="multipart/form-data">
          <input type="file" name="photo" />
          <button class="btn btn-primary" type="submit">Dodaj zdjęcie</button>
        </form>
      </div>
    </div>
    <h2>Gallery</h2>
    <div class="demo-gallery gallery">
      <% uploads.forEach(function(u){ %>
        <div class="card demo-gallery-item gallery-item">
          <% if (u.url) { %>
            <img src="<%= u.url %>" alt="<%= u.originalname %>" loading="lazy" />
          <% } else { %>
            <div><%= u.originalname %></div>
          <% } %>
        </div>
      <% }) %>
    </div>
  </main>
  <%- include('partials/footer') %>
</body>
</html>