<!DOCTYPE html>
<html>
<head><meta charset="utf-8" /><meta name="viewport" content="width=device-width,initial-scale=1" /><title><%= page.title %></title></head>
<body>
  <main>
    <h1><%= page.title %></h1>
    <% if (typeof paid !== 'undefined' && paid) { %>
      <div style="color:green;">Payment received â€” thanks!</div>
    <% } %>
    <div>Upload area</div>
    <form method="POST" action="/guest/<%= page.id %>/upload" enctype="multipart/form-data">
      <input type="file" name="photo" />
      <button type="submit">Upload</button>
    </form>
    <h2>Gallery</h2>
    <div class="gallery">
      <% uploads.forEach(function(u){ %>
        <div class="gallery-item">
          <% if (u.url) { %>
            <img src="<%= u.url %>" width="200" alt="<%= u.originalname %>" loading="lazy" />
          <% } else { %>
            <div><%= u.originalname %></div>
          <% } %>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>