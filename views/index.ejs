<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>SnapThis</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <%- include('partials/header') %>
  <main class="container">
    <h1>SnapThis - Produkty</h1>
    <div class="grid">
      <% products.forEach(function(p){ %>
        <div class="card">
          <div class="card-top">
            <% if (p.image) { %>
              <img src="<%= p.image %>" alt="<%= p.title %>" />
            <% } %>
          </div>
          <div class="card-body">
          <h2><a href="/product/<%= p.id %>"><%= p.title %></a></h2>
          <p><%= p.description || '' %></p>
            <div class="price-row">Price: <div class="price-current"><%= p.price %></div></div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
  <%- include('partials/footer') %>
</body>
</html>
