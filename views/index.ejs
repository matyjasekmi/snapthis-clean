<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>SnapThis</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <main>
    <h1>SnapThis - Products</h1>
    <div>
      <% products.forEach(function(p){ %>
        <div>
          <h2><a href="/product/<%= p.id %>"><%= p.title %></a></h2>
          <p><%= p.description || '' %></p>
          <div>Price: <%= p.price %></div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>
